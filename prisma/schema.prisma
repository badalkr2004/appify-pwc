generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  firstName String
  lastName  String
  image     String?
  clerkid   String    @unique
  credits   Int       @default(0)
  garbages  Garbage[]
  service   Service[]
}

model Garbage {
  id                String   @id @default(uuid())
  locationLatitude  String
  locationLongitude String
  garbageType       String
  status            String
  description       String
  image             String
  dateCreated       DateTime @default(now())
  userId            String
  user              User     @relation(fields: [userId], references: [id])
}

model Service {
  id           String        @id @default(uuid())
  image        String?
  approxWeight String
  latitude     String?
  longitude    String?
  phone        String
  address      String
  status       ServiceStatus @default(PENDING)
  userId       String
  user         User          @relation(fields: [userId], references: [id])
}

enum ServiceStatus {
  PENDING
  PROCESSING
  COMPLETED
}

model Product {
  id         String   @id @default(uuid())
  title      String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  price      Int
  image      String
}

model Category {
  id       String    @id @default(uuid())
  name     String
  products Product[]
}
